{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["github", "dist", "node_modules"]
}
